<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="54dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="..."
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="314dp" />

    <Button
        android:id="@+id/buttonPerc"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="%"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMR"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="Back"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonMR"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonMR"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="MR"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonMS"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonMS"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="MS"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonMC"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonMC"
        android:layout_width="84dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="MC"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/buttonMult"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="*"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="408dp" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="-"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="332dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="251dp" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="/"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonBack"
        tools:layout_editor_absoluteX="284dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="408dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="332dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="332dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="332dp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="C"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMC"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="="
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="486dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="9"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="251dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="254dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="8"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="251dp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="178dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="486dp" />

    <Button
        android:id="@+id/buttonDec"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="."
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="486dp" />

    <Button
        android:id="@+id/buttonSign"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="#313131"
        android:text="+/-"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMS"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="408dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:background="#313131"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="408dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="354dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="#dddddd"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>